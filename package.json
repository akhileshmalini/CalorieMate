{
  "scripts": {
    "build": "npm install; babel public/scripts -s --minified --compact true -d public/scripts-es5; bower install; cd functions; npm install; cd -; echo 'Done. Ready to deploy.'",
    "dep": "npm install -d & bower install",
    "serve": "firebase serve -p 5000",
    "cast":"firebase serve -o 0.0.0.0 -p 5001",
    "watch": "babel -w public/scripts -s --retain-lines -d public/scripts-es5"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "bower": "^1.8.2",
    "firebase-tools": "^3.9.1"
  },
  "private": true,
  "dependencies": {
    "firebase": "^4.5.0",
    "install": "^0.10.1",
    "serve": "^6.2.0",
    "websocket-driver": "^0.7.0"
  }
}
