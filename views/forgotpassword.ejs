


<div id="passReset" class="modal">
    <div class="modal-content">
        <div class="row">
            <div class="input-field col s12 center">
                <h3 class="center " style="font-family:Streetwear;text-shadow: 0px 2px 2px black;  color:#1dc072">Reset Password</h3>
            </div>
        </div>
        <div class="row">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="email" type="text" class="validate">
                    <label for="email">Email Address</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field center center-align col s12 ">
                    <button onclick="sendPasswordReset()" style="background-color:#1dc072" class="btn waves-effect waves-light col s12">Reset</button>
                </div>
            </div>       
        </div>
        <div id="pass_reset_error" class="row" style="display:none; color:red">
        </div>
    </div>
</div>




