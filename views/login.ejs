  <!-- Login Modal -->


  <!-- ..................................................................................................................................... -->
  
  
  <div id="LoginContainer"  style=" width: 75% !important ; max-height: 100% !important " class="modal">
    <div class="modal-content">
        <div class="row">
            <div class="input-field col s12 center">
                <h3 class="center" style="font-family:Streetwear;text-shadow: 0px 2px 2px black;  color:#1dc072">Login</h3>
            </div>
        </div>
        <div class="row">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="login_user_name" type="text" class="validate">
                        <label for="login_user_name">User Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        <input id="login_password" type="password">
                        <label for="login_password">Password</label>
                    </div>
                </div>       
                <div class="row">
                    <div class="input-field center center-align col s12 ">
                        <button id="login_submit" onclick="toggleSignIn()" style="background-color:#1dc072" class="btn waves-effect waves-light col s12">Login</button>
                    </div>
                </div>       
        </div>
        <div id="signin_error" class="row" style="display:none; color:red">
          Wrong Password
        </div>
    </div>
    <div class="modal-footer">
        <a href="#passReset" class="modal-action modal-trigger modal-close waves-effect waves-green btn-flat" style="color:#1dc072">Forgot password </a>
    </div>
</div>
